<process name="BestOfferProcess"
               targetNamespace="http://xmlns.oracle.com/ObtainBestOffer/ObtainBestOfferService/BestOfferProcess"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://xmlns.oracle.com/ObtainBestOffer/ObtainBestOfferService/BestOfferProcess"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://requestquotationtransporterzws/"
         xmlns:ns2="http://requestquotationtransporteraws/"
         xmlns:ns3="http://bestoffer.truckhub.org"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:ns4="http://xmlns.oracle.com/pcbpel/adapter/db/ObtainBestOffer/ObtainBestOfferService/TruckHubDB"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:ns5="http://xmlns.oracle.com/pcbpel/adapter/db/TruckHubDB">

    <import namespace="http://xmlns.oracle.com/ObtainBestOffer/ObtainBestOfferService/BestOfferProcess" location="BestOfferProcess.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="bestofferprocess_client" partnerLinkType="client:BestOfferProcess" myRole="BestOfferProcessProvider"/>
    <partnerLink name="ObtainOfferTransporterA"
                 partnerLinkType="ns2:ObtainOfferTransporterA"
                 partnerRole="RequestQuotationTransporterAService"/>
    <partnerLink name="ObtainOfferTransporterZ"
                 partnerLinkType="ns1:ObtainOfferTransporterZ"
                 partnerRole="RequestQuotationTransporterZService"/>
    <partnerLink name="TruckHubDB" partnerLinkType="ns4:TruckHubDB_plt"
                 partnerRole="TruckHubDB_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:BestOfferProcessRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:BestOfferProcessResponseMessage"/>
    <variable name="InvokeTransporterA_generateOffer_InputVariable"
              messageType="ns2:generateOffer"/>
    <variable name="InvokeTransporterA_generateOffer_OutputVariable"
              messageType="ns2:generateOfferResponse"/>
    <variable name="InvokeTransporterZ_generateOffer_InputVariable"
              messageType="ns1:generateOffer"/>
    <variable name="InvokeTransporterZ_generateOffer_OutputVariable"
              messageType="ns1:generateOfferResponse"/>
    <variable name="CallDB_TruckHubDB_InputVariable"
              messageType="ns4:TruckHubDBInput_msg"/>
    <variable name="CallDB_TruckHubDB_OutputVariable"
              messageType="ns4:TruckHubDBOutputCollection_msg"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in BestOfferProcess.wsdl) -->
    <receive name="receiveInput" partnerLink="bestofferprocess_client" portType="client:BestOfferProcess" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="AssignWSInput">
      <copy>
        <from>$inputVariable.payload/ns3:distanceInKm</from>
        <to>$InvokeTransporterA_generateOffer_InputVariable.parameters/distanceInKm</to>
      </copy>
      <copy>
        <from>$inputVariable.payload/ns3:parcelWeight</from>
        <to>$InvokeTransporterA_generateOffer_InputVariable.parameters/parcelWeight</to>
      </copy>
      <copy>
        <from>$inputVariable.payload/ns3:distanceInKm</from>
        <to>$InvokeTransporterZ_generateOffer_InputVariable.parameters/distanceInKm</to>
      </copy>
      <copy>
        <from>$inputVariable.payload/ns3:parcelWeight</from>
        <to>$InvokeTransporterZ_generateOffer_InputVariable.parameters/parcelWeight</to>
      </copy>
    </assign>
    <flow name="Flow1">
      <sequence name="Sequence">
        <invoke name="InvokeTransporterA" bpelx:invokeAsDetail="no"
                partnerLink="ObtainOfferTransporterA"
                portType="ns2:RequestQuotationTransporterAService"
                operation="generateOffer"
                inputVariable="InvokeTransporterA_generateOffer_InputVariable"
                outputVariable="InvokeTransporterA_generateOffer_OutputVariable"/>
      </sequence>
      <sequence name="Sequence1">
        <invoke name="InvokeTransporterZ"
                partnerLink="ObtainOfferTransporterZ"
                portType="ns1:RequestQuotationTransporterZService"
                operation="generateOffer"
                inputVariable="InvokeTransporterZ_generateOffer_InputVariable"
                outputVariable="InvokeTransporterZ_generateOffer_OutputVariable"
                bpelx:invokeAsDetail="no"/>
      </sequence>
    </flow>
    <if name="isTransportABestOffer">
      <condition>$InvokeTransporterA_generateOffer_OutputVariable.parameters/return &gt;= $InvokeTransporterZ_generateOffer_OutputVariable.parameters/return</condition>
      <sequence name="Sequence2">
        <assign name="AssignDBCallA">
          <copy>
            <from>"TransporterA"</from>
            <to>$CallDB_TruckHubDB_InputVariable.TruckHubDBInput_msg/ns5:name</to>
          </copy>
          <copy>
            <from>$InvokeTransporterA_generateOffer_OutputVariable.parameters/return</from>
            <to>$outputVariable.payload/ns3:offer</to>
          </copy>
          <copy>
            <from>"TransporterA"</from>
            <to>$outputVariable.payload/ns3:transporterName</to>
          </copy>
        </assign>
      </sequence>
      <else>
        <sequence name="Sequence3">
          <assign name="AssignDBCallZ">
            <copy>
              <from>"TransporterZ"</from>
              <to>$CallDB_TruckHubDB_InputVariable.TruckHubDBInput_msg/ns5:name</to>
            </copy>
            <copy>
              <from>$InvokeTransporterZ_generateOffer_OutputVariable.parameters/return</from>
              <to>$outputVariable.payload/ns3:offer</to>
            </copy>
            <copy>
              <from>"TransporterZ"</from>
              <to>$outputVariable.payload/ns3:transporterName</to>
            </copy>
          </assign>
        </sequence>
      </else>
    </if>
    <invoke name="CallDB" partnerLink="TruckHubDB"
            portType="ns4:TruckHubDB_ptt" operation="TruckHubDB"
            inputVariable="CallDB_TruckHubDB_InputVariable"
            outputVariable="CallDB_TruckHubDB_OutputVariable"
            bpelx:invokeAsDetail="no"/>
    <assign name="AssignOutput">
      <copy>
        <from>$CallDB_TruckHubDB_OutputVariable.TruckHubDBOutputCollection/ns5:TruckHubDBOutput/ns5:id</from>
        <to>$outputVariable.payload/ns3:transporterId</to>
      </copy>
    </assign>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="bestofferprocess_client" portType="client:BestOfferProcess" operation="process" variable="outputVariable"/>
  </sequence>
</process>