<process name="QuotationProcess"
         targetNamespace="http://xmlns.oracle.com/RequestQuotation/RequestQuotationService/QuotationProcess"
         xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:client="http://xmlns.oracle.com/RequestQuotation/RequestQuotationService/QuotationProcess"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://calculatecoordinatesdistanceservice/"
         xmlns:ns2="http://xmlns.oracle.com/ObtainBestOffer/ObtainBestOfferService/BestOfferProcess"
         xmlns:ns3="http://quotation.truckhub.org"
         xmlns:ns4="http://bestoffer.truckhub.org">

    <import namespace="http://xmlns.oracle.com/RequestQuotation/RequestQuotationService/QuotationProcess" location="QuotationProcess.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
    <partnerLinks>
        <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
        <partnerLink name="quotationprocess_client" partnerLinkType="client:QuotationProcess" myRole="QuotationProcessProvider" partnerRole="QuotationProcessRequester"/>
        <partnerLink name="CalculateCoordinatesDistance"
                     partnerLinkType="ns1:CalculateCoordinatesDistance"
                     partnerRole="CalculateCoordinatesDistanceService"/>
        <partnerLink name="ObtainBestOffer"
                     partnerLinkType="ns2:BestOfferProcess"
                     partnerRole="BestOfferProcessProvider"/>
    </partnerLinks>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        VARIABLES                                                        
        List of messages and XML documents used within this BPEL process 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <variables>
        <!-- Reference to the message passed as input during initiation -->
        <variable name="inputVariable" messageType="client:QuotationProcessRequestMessage"/>

        <!-- Reference to the message that will be sent back to the requester during callback -->
        <variable name="outputVariable" messageType="client:QuotationProcessResponseMessage"/>
        <variable name="InvokeCalculateDistance_getCoordinatesDistance_InputVariable"
                  messageType="ns1:getCoordinatesDistance"/>
        <variable name="InvokeCalculateDistance_getCoordinatesDistance_OutputVariable"
                  messageType="ns1:getCoordinatesDistanceResponse"/>
        <variable name="InvokeBestOffer_process_InputVariable"
                  messageType="ns2:BestOfferProcessRequestMessage"/>
        <variable name="InvokeBestOffer_process_OutputVariable"
                  messageType="ns2:BestOfferProcessResponseMessage"/>
    </variables>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       ORCHESTRATION LOGIC                                               
       Set of activities coordinating the flow of messages across the    
       services integrated within this business process                  
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <sequence name="main">
        <!-- Receive input from requestor. (Note: This maps to operation defined in QuotationProcess.wsdl) -->
        <receive name="receiveInput" partnerLink="quotationprocess_client" portType="client:QuotationProcess" operation="process" variable="inputVariable" createInstance="yes"/>
        <assign name="AssignWSInput">
            <copy>
                <from>$inputVariable.payload/ns3:originLatitude</from>
                <to>$InvokeCalculateDistance_getCoordinatesDistance_InputVariable.parameters/origin_latitude</to>
            </copy>
            <copy>
                <from>$inputVariable.payload/ns3:originLongitude</from>
                <to>$InvokeCalculateDistance_getCoordinatesDistance_InputVariable.parameters/origin_longitude</to>
            </copy>
            <copy>
                <from>$inputVariable.payload/ns3:destinationLatitude</from>
                <to>$InvokeCalculateDistance_getCoordinatesDistance_InputVariable.parameters/destination_latitude</to>
            </copy>
            <copy>
                <from>$inputVariable.payload/ns3:destinationLongitude</from>
                <to>$InvokeCalculateDistance_getCoordinatesDistance_InputVariable.parameters/destination_longitude</to>
            </copy>
        </assign>
        <invoke name="InvokeCalculateDistance" bpelx:invokeAsDetail="no"
                partnerLink="CalculateCoordinatesDistance"
                portType="ns1:CalculateCoordinatesDistanceService"
                operation="getCoordinatesDistance"
                inputVariable="InvokeCalculateDistance_getCoordinatesDistance_InputVariable"
                outputVariable="InvokeCalculateDistance_getCoordinatesDistance_OutputVariable"/>
        <assign name="AssignBestOfferInput">
            <copy>
                <from>$InvokeCalculateDistance_getCoordinatesDistance_OutputVariable.parameters/return</from>
                <to>$InvokeBestOffer_process_InputVariable.payload/ns4:distanceInKm</to>
            </copy>
            <copy>
                <from>$inputVariable.payload/ns3:parcelWeight</from>
                <to>$InvokeBestOffer_process_InputVariable.payload/ns4:parcelWeight</to>
            </copy>
        </assign>
        <invoke name="InvokeBestOffer" bpelx:invokeAsDetail="no"
                partnerLink="ObtainBestOffer" portType="ns2:BestOfferProcess"
                operation="process"
                inputVariable="InvokeBestOffer_process_InputVariable"
                outputVariable="InvokeBestOffer_process_OutputVariable"/>
        <assign name="AssignOutput">
            <copy>
                <from>$InvokeBestOffer_process_OutputVariable.payload/ns4:offer</from>
                <to>$outputVariable.payload/ns3:offer</to>
            </copy>
            <copy>
                <from>$InvokeBestOffer_process_OutputVariable.payload/ns4:transporter</from>
                <to>$outputVariable.payload/ns3:transporter</to>
            </copy>
        </assign>
        <!-- 
          Asynchronous callback to the requester. (Note: the callback location and correlation id is transparently handled using WS-addressing.)
        -->
        <invoke name="callbackClient" partnerLink="quotationprocess_client" portType="client:QuotationProcessCallback" operation="processResponse" inputVariable="outputVariable"/>
    </sequence>
</process>